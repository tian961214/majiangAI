page{
  overflow: hidden;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
}
.container{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}
.backgroundimg{
  position: absolute;
  width: 100%;
  height: 100%;
}
.choose{
  z-index: 1;
  width: 100%;
  height: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 900;
  font-size: larger;
}
.degree{
  z-index: 1;
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.degree-button{
  width: 100px;
  height: 60px;
  display: flex;
  font-weight: 900;
  align-items: center;
  justify-content: center;
  margin: 30px;
  background-color: #fff;
  border-radius: 20px;
}
.degree-button-b{
  width: 100px;
  height: 60px;
  display: flex;
  font-weight: 900;
  align-items: center;
  justify-content: center;
  margin: 30px;
  background-color: rgb(180, 104, 41);
  border-radius: 20px;
  color: white;
}
.start{
  z-index: 1;
  width: 100%;
  height: 40%;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
}
.start-button{
  width: 100px;
  height: 50px;
  background-color: #fff;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}