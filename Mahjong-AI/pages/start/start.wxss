page{
  overflow: hidden;
  background-size: 100% 100%;
  height: 100%;
  width: 100%;
}
.container{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}
.backgroundimg{
  position: absolute;
  width: 100%;
  height: 100%;
}
.start{
  z-index: 1;
  width: 100%;
  height: 100%;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
}
.start-button{
  width: 100px;
  height: 50px;
  background-color: #fff;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
}